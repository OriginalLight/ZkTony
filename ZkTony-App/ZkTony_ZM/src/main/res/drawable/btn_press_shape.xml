<?xml version="1.0" encoding="utf-8" ?><!--相当于做了一张圆角的图片,然后给button作为背景图片-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--设置背景色-->
    <gradient
        android:angle="135"
        android:centerColor="#B43A50D0"
        android:endColor="@color/dark_secondary"
        android:startColor="@color/dark_secondary"
        android:type="linear" />

    <!--设置圆角-->
    <corners android:radius="8dp" />
</shape>